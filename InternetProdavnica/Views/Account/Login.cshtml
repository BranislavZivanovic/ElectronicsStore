@model InternetProdavnica.ViewModels.LoginViewModel
@{
    ViewBag.Title = "User Login";
}

<div class="card registerForma">
    <form method="post">
        <div class="card-header">
            <h2 class="d-flex justify-content-center">Logovanje na sajt</h2>
        </div>
        <div class="card-body" style="padding:40px;">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <i class="bi bi-envelope d-flex justify-content-center" style="font-size:2.5em;"></i> 
                <input class="inputRegister" asp-for="Email" class="form-control" placeholder="Unesite vas email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="bi bi-braces-asterisk d-flex justify-content-center" style="font-size:2.5em; margin-top:10px;"></i> 
                <input class="inputRegister" asp-for="Password" class="form-control" placeholder="Unesite vasu sifru"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe"/>
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Ulogujte se" class="siteButtonStyle" />
            </div>
        </div>
    </form>
</div>

