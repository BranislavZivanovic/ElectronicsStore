@using InternetProdavnica.Views.Shared.Components.SearchBar
@model SPager

<div class="container">
        @if(Model.TotalPages > 0)
        {
            <ul class="pagination justify-content-end">
                @if(Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a style="color:black;" class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="1">Prva</a>
                    </li>
                    <li>
                        <a style="color:black;" class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" 
                           asp-route-pg="@(Model.CurrentPage - 1)">Prethodna</a>
                    </li>
                }
                @for(var pge = Model.StartPage; pge <= Model.EndPage; pge++)
                {
                    <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                        @*asp-route-pagesize="@Model.PageSize" asp-route-searchtext="@Model.SearchText"
                            !Liniju iznad dodajemo kako bi nam result u search box-u ostao, jer ako pretraga ima vise od jedne stranice, da ne dodje
                             do result reset-a.
                        *@
                        <a style="background:white; color:black;" asp-route-pagesize="@Model.PageSize" asp-route-searchtext="@Model.SearchText" class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="@pge">@pge</a>
                    </li>
                }
                @if(Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a style="color:black;" class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" 
                           asp-route-pg="@(Model.CurrentPage + 1)">Sledeća</a>
                    </li>
                    <li class="page-item">
                        <a style="color:black;" class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" 
                           asp-route-pg="@(Model.TotalPages)">Poslednja</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <h1 class="d-flex justify-content-center" style="margin-top:20%;">Nije pronađen ni jedan rezultat</h1>
            <h1 class="d-flex justify-content-center"><i class="bi bi-emoji-frown pocetnaIkonice" style="font-size: 5rem;"></i></h1>
        }
    </div>
<br />
